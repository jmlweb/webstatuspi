{
  "permissions": {
    "allow": [
      "Bash(wc:*)",
      "Bash(python --version)",
      "Bash(python3 --version)",
      "Bash(pip list)",
      "Bash(pip3 list)",
      "Bash(pytest:*)",
      "Bash(python -m pytest:*)",
      "Bash(ls:*)",
      "Bash(cat docs/dev/*)",
      "Bash(flake8:*)",
      "Bash(mypy:*)",
      "Bash(python -m py_compile:*)",
      "Bash(python3:*)",
      "Bash(pip3 install:*)",
      "Skill(complete-task)",
      "Skill(add-task)",
      "Bash(pip install:*)",
      "Bash(webstatuspi:*)",
      "Bash(tree:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "file_path=$(echo '$ARGUMENTS' | jq -r '.tool_input.file_path // .tool_input.filePath // empty'); if [[ \"$file_path\" == *.py ]]; then python3 -m py_compile \"$file_path\" 2>&1 || echo 'HOOK_ERROR: Python syntax check failed'; fi",
            "timeout": 10,
            "statusMessage": "Validating Python syntax..."
          }
        ]
      }
    ]
  }
}
